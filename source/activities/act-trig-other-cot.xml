                <m>\frac{5\pi}{6}</m>
              </cell>
              <cell>
                <m>\pi</m>
              </cell>
            </row>
            <row bottom="minor" halign="center">
              <cell>
                <m>\sin(t)</m>
              </cell>
              <cell>
                <m>0</m>
              </cell>
              <cell>
                <m>\frac{1}{2}</m>
              </cell>
              <cell>
                <m>\frac{\sqrt{2}}{2}</m>
              </cell>
              <cell>
                <m>\frac{\sqrt{3}}{2}</m>
              </cell>
              <cell>
                <m>1</m>
              </cell>
              <cell>
                <m>\frac{\sqrt{3}}{2}</m>
              </cell>
              <cell>
                <m>\frac{\sqrt{2}}{2}</m>
              </cell>
              <cell>
                <m>\frac{1}{2}</m>
              </cell>
              <cell>
                <m>0</m>
              </cell>
            </row>
            <row bottom="minor" halign="center">
              <cell>
                <m>\cos(t)</m>
              </cell>
              <cell>
                <m>1</m>
              </cell>
              <cell>
                <m>\frac{\sqrt{3}}{2}</m>
              </cell>
              <cell>
                <m>\frac{\sqrt{2}}{2}</m>
              </cell>
              <cell>
                <m>\frac{1}{2}</m>
              </cell>
              <cell>
                <m>0</m>
              </cell>
              <cell>
                <m>-\frac{1}{2}</m>
              </cell>
              <cell>
                <m>-\frac{\sqrt{2}}{2}</m>
              </cell>
              <cell>
                <m>-\frac{\sqrt{3}}{2}</m>
              </cell>
              <cell>
                <m>-1</m>
              </cell>
            </row>
            <row bottom="minor" halign="center">
              <cell>
                <m>\tan(t)</m>
              </cell>
              <cell>
                <m>0</m>
              </cell>
              <cell>
                <m>\frac{1}{\sqrt{3}}</m>
              </cell>
              <cell>
                <m>1</m>
              </cell>
              <cell>
                <m>\frac{3}{\sqrt{3}}</m>
              </cell>
              <cell>u</cell>
              <cell>
                <m>-\frac{3}{\sqrt{3}}</m>
              </cell>
              <cell>
                <m>-1</m>
              </cell>
              <cell>
                <m>-\frac{1}{\sqrt{3}}</m>
              </cell>
              <cell>
                <m>0</m>
              </cell>
            </row>
