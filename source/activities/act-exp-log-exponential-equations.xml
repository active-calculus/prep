        <p>
          <m>72 - 30(0.7)^{0.05t} = 60</m>
        </p>
      </statement>
      <hint/>
      <answer/>
      <solution/>
    </task>
    <task workspace="3cm" xml:id="act-exp-log-exponential-equations-task-4">
      <statement>
        <p>
          <m>\ln(t) = -2</m>
        </p>
      </statement>
      <hint/>
      <answer/>
      <solution/>
    </task>
    <task workspace="3cm" xml:id="act-exp-log-exponential-equations-task-5">
      <statement>
        <p>
          <m>3 + 2\log_{10}(t) = 3.5</m>
        </p>
      </statement>
      <hint/>
      <answer/>
      <solution/>
    </task>
    <answer>
      <p/>
    </answer>
    <solution>
