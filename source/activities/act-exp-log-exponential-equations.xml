        <p>
          <m>4 \cdot 2^t - 2 = 3</m>
        </p>
      </statement>
      <hint/>
      <answer/>
      <solution/>
    </task>
    <task workspace="3cm" xml:id="act-exp-log-exponential-equations-task-2">
