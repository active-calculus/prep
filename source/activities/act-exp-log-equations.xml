<worksheet label="ws-act-exp-log-equations">
  <activity xml:id="act-exp-log-equations">
    <introduction>
      <p>
			Solve each of the following equations for the exact value of the unknown variable.  If there is no solution to the equation, explain why not.
		</p>
      <p/>
    </introduction>
    <task workspace="3cm" xml:id="act-exp-log-equations-task-0">
      <statement>
        <p>
          <m>e^t = \frac{1}{10}</m>
        </p>
      </statement>
      <hint/>
      <answer/>
      <solution/>
    </task>
    <task workspace="3cm" xml:id="act-exp-log-equations-task-1">
      <statement>
        <p>
          <m>5e^{t}=7</m>
        </p>
      </statement>
      <hint/>
      <answer/>
      <solution/>
    </task>
    <task workspace="3cm" xml:id="act-exp-log-equations-task-2">
      <statement>
        <p>
          <m>\ln(t) = -\frac{1}{3}</m>
        </p>
      </statement>
      <hint/>
      <answer/>
      <solution/>
    </task>
    <task workspace="3cm" xml:id="act-exp-log-equations-task-3">
      <statement>
        <p>
          <m>e^{1-3t} = 4</m>
        </p>
      </statement>
      <hint/>
      <answer/>
      <solution/>
    </task>
    <task workspace="3cm" xml:id="act-exp-log-equations-task-4">
      <statement>
        <p>
          <m>2\ln(t) + 1 = 4</m>
        </p>
      </statement>
      <hint/>
      <answer/>
      <solution/>
    </task>
    <task workspace="3cm" xml:id="act-exp-log-equations-task-5">
      <statement>
        <p>
          <m>4 - 3e^{2t} = 2</m>
        </p>
      </statement>
      <hint/>
      <answer/>
      <solution/>
    </task>
    <task workspace="3cm" xml:id="act-exp-log-equations-task-6">
      <statement>
        <p>
          <m>4 + 3e^{2t} = 2</m>
        </p>
      </statement>
      <hint/>
      <answer/>
      <solution/>
    </task>
    <task workspace="3cm" xml:id="act-exp-log-equations-task-7">
      <statement>
        <p>
          <m>\ln(5 - 6t) = -2</m>
        </p>
      </statement>
      <hint/>
      <answer/>
      <solution/>
    </task>
    <answer>
